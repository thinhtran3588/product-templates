{
  "name": "api-server",
  "version": "0.1.1",
  "description": "API Server",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "tsc && tsc-alias -p tsconfig.json && node scripts/add-js-extensions.mjs",
    "start": "node dist/index.js",
    "dev": "nodemon",
    "test": "vitest run --reporter=verbose",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "test:unit": "vitest run src/__tests__/unit",
    "test:e2e": "vitest run src/__tests__/e2e",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\"",
    "validate": "npx tsc --noEmit && npm run lint && npm run format:check && npm run test:coverage",
    "migrate": "tsx sequelize/migrate.ts up",
    "migrate:down": "tsx sequelize/migrate.ts down",
    "migrate:status": "tsx sequelize/migrate.ts status",
    "migrate:create": "tsx sequelize/create-migration.ts"
  },
  "keywords": [],
  "author": "Thinh Tran",
  "license": "MIT",
  "dependencies": {
    "@hono/node-server": "^1.19.9",
    "@hono/swagger-ui": "^0.5.3",
    "@hono/zod-openapi": "^1.2.2",
    "awilix": "^12.0.5",
    "dotenv": "^17.2.3",
    "firebase-admin": "^13.6.0",
    "graphql": "^16.12.0",
    "graphql-yoga": "^5.18.0",
    "hono": "^4.12.0",
    "hono-rate-limiter": "^0.5.3",
    "html-entities": "^2.6.0",
    "is-mergeable-object": "^1.1.1",
    "jsonwebtoken": "^9.0.3",
    "pg": "^8.16.3",
    "sanitize-html": "^2.17.0",
    "sequelize": "^6.37.7",
    "uuid": "^13.0.0",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@ianvs/prettier-plugin-sort-imports": "^4.7.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^22.19.1",
    "@types/pg": "^8.15.6",
    "@types/sanitize-html": "^2.16.0",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^8.48.0",
    "@typescript-eslint/parser": "^8.48.0",
    "@vitest/coverage-v8": "^4.0.14",
    "@vitest/ui": "^4.0.14",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-no-null": "^1.0.2",
    "eslint-plugin-prettier": "^5.5.4",
    "glob": "^13.0.0",
    "nodemon": "^3.1.7",
    "prettier": "^3.6.2",
    "tsc-alias": "^1.8.16",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2",
    "typescript-eslint": "^8.48.0",
    "vitest": "^4.0.14"
  }
}
