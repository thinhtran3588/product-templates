# =============================================================================
# Server Configuration
# =============================================================================
# The port the server will run on
PORT=3001

# Node environment (development, production, etc.)
NODE_ENV=development

# =============================================================================
# Middleware & Security
# =============================================================================

# Enable/Disable Swagger (UI at /api, Spec at /api.json)
SWAGGER_ENABLED=true

# Enable/Disable GraphQL Endpoint (Enabled by default)
GRAPHQL_ENABLED=true

# Enable/Disable GraphiQL (GraphQL IDE UI) (Enabled by default)
GRAPHIQL_ENABLED=true

# Enable/Disable Logger
LOGGER_ENABLED=true

# Enable/Disable CORS
CORS_ENABLED=true

# Enable/Disable Rate Limiting
RATE_LIMIT_ENABLED=true

# Rate limiting window in milliseconds (e.g., 60000 = 1 minute)
RATE_LIMIT_WINDOW_MS=60000

# Maximum number of requests per windowMs
RATE_LIMIT_MAX=100
