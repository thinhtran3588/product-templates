{
  "name": "api",
  "version": "0.0.1",
  "type": "module",
  "scripts": {
    "dev": "bun run --hot src/index.ts",
    "start": "bun run src/index.ts",
    "build:executable": "bun build src/index.ts --compile --outfile api",
    "lint": "eslint",
    "lint:fix": "eslint --fix",
    "test": "vitest",
    "test:coverage": "vitest --coverage --run",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "validate": "bun lint && bun format:check && bun test:coverage && bun run build",
    "validate:fix": "bun lint:fix && bun format",
    "worker:dev": "wrangler dev",
    "worker:deploy": "wrangler deploy --minify",
    "worker:typegen": "wrangler types --env-interface CloudflareBindings"
  },
  "dependencies": {
    "@hono/graphql-server": "^0.7.0",
    "@hono/swagger-ui": "^0.5.3",
    "@hono/zod-openapi": "^1.2.2",
    "awilix": "^13.0.0",
    "graphql": "^16.12.0",
    "hono": "^4.12.1",
    "hono-rate-limiter": "^0.5.3",
    "pino": "^10.3.1",
    "uuid": "^13.0.0",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@eslint/js": "^9.21.0",
    "@ianvs/prettier-plugin-sort-imports": "^4.4.1",
    "@types/bun": "latest",
    "@vitest/coverage-v8": "^4.0.18",
    "eslint": "^9.21.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-no-null": "^1.0.2",
    "eslint-plugin-prettier": "^5.2.3",
    "prettier": "^3.5.1",
    "typescript-eslint": "^8.24.1",
    "vitest": "^4.0.18"
  }
}
